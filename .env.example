# Example environment variables
# MongoDB
MONGODB_URI=mongodb+srv://user:pass@cluster0.mongodb.net/dbname

# Session
SESSION_SECRET=your_session_secret_here
# If deploying behind a reverse proxy / load balancer, set this so secure cookies work.
# TRUST_PROXY=1

# App URL (used to build callback URLs when GITHUB_CALLBACK_URL is not set)
APP_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
# Optional: explicitly set the callback URL registered with GitHub
# GITHUB_CALLBACK_URL=https://your-domain.com/auth/github/callback

# Honeycomb OpenTelemetry
# Required for exporting traces to Honeycomb
HONEYCOMB_API_KEY=your_honeycomb_api_key
HONEYCOMB_DATASET=your_dataset_name
# Optional
OTEL_SERVICE_NAME=edit-code-editor
# Set to debug while validating instrumentation
# OTEL_LOG_LEVEL=debug

# OTLP (OpenTelemetry) exporter config (optional if using Honeycomb vars above)
# For local collector: http://localhost:4318/v1/traces
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
# OTEL_EXPORTER_OTLP_HEADERS=key=value,another=thing
